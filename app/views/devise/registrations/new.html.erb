<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="container device">
  <div class="device_frame w-50 container-fluid text-center">
    <p class="my-4">新しいアカウントを作成</h2>

    <div class="field form-row pt-1">
      <span class="badge text-bg-danger">必須</span>
      <%= f.text_field :name, autofocus: true ,placeholder: "ユーザー名"%>
    </div>


    <div class="field form-row pt-1">
      <span class="badge text-bg-danger">必須</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "メールアドレス" %>
    </div>

    <div class="field form-row pt-1">
      <span class="badge text-bg-danger">必須</span>
      <%= f.password_field :password, autocomplete: "new-password" ,placeholder: "パスワード"%>
    </div>

    <div class="field form-row pt-1">
      <span class="badge text-bg-danger">必須</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: "パスワード確認"%>
    </div>

    <div class="actions col-6 mx-auto">
      <input type="submit" name="commit" value="新しいアカウントを作成" class="form-control btn-primary my-4 " data-disable-with="新しいアカウントを作成" />
    </div>
    <a href="/users/sign_in" class ="text-decoration-none">すでにアカウントをお持ちの方はログイン</a>
  </div>
</div>
<% end %>



