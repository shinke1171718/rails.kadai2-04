<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%= form_with model: @room, local: true do |f| %>
  <div class="container-fiuld room-new">
    <div class="row p-3">
      <nav class="nav flex-column col-lg-2">
        <a class="nav-link active" aria-current="page" href="/rooms/new">基本情報</a>
      </nav>

      <div class="col-lg-10 room-view p-3">
        <div class="room-view-box">
          <div class="update-content">
            <div class="field form-row pt-1">
              <%= f.label :name, "ルーム名", {class: "col-md-3 required-a"}%>
              <span class="badge text-bg-danger">必須</span>
              <%= f.text_field :name, autofocus: true, autocomplete: "name" ,placeholder: "ルーム名を入力", :class => 'fmb-4 col-md-5 px-2'%>
            </div>
          </div>

          <div class="update-content">
            <div class="field form-row pt-1">
              <%= f.label :introduction, "ルーム紹介", {class: "required-a"} %>
              <span class="badge text-bg-danger">必須</span>
              <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" ,placeholder: "ルーム紹介", :class => 'fmb-4 col-md-5 px-2'%>
            </div>
          </div>

          <div class="update-content">
            <div class="field form-row pt-1">
              <%= f.label :price, "料金", {class: "required-a"}%>
              <span class="badge text-bg-danger">必須</span>
              <%= f.text_field :price, autofocus: true, autocomplete: "price" ,placeholder: "料金", :class => 'fmb-4 col-md-5 px-2'%>
            </div>
          </div>

          <div class="update-content">
            <div class="field form-row pt-1">
              <%= f.label :address, "住所", {class: "required-a"}%>
              <span class="badge text-bg-danger">必須</span>
              <%= f.text_field :address, autofocus: true, autocomplete: "address" ,placeholder: "住所", :class => 'fmb-4 col-md-5 px-2'%>
            </div>
          </div>

          <div class="update-content">
            <form>
              <div class="field form-row pt-1">
                <%= f.label :image, "ルーム画像", {class: "required-a"}%>
                <span class="badge text-bg-danger">必須</span>
                <input type="file" class="form-control-file" id="exampleFormControlFile1">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>




  </div>
<% end %>

