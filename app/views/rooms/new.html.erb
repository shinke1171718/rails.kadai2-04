<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%= form_with model: @room, local: true do |f| %>
  <div class="container-fiuld room-new">
    <div class="row">
      <nav class="nav flex-column col-lg-2">
        <a class="nav-link active" aria-current="page" href="/rooms/new">基本情報</a>
      </nav>

      <div class="col-lg-10 room-view">
        <div class="room-view-box">

        <div class="field form-row pt-1">
          <span class="badge text-bg-danger">必須</span>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" ,placeholder: "ルーム名"%>
        </div>

        <div class="field form-row pt-1">
          <span class="badge text-bg-danger">必須</span>
          <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" ,placeholder: "ルーム紹介"%>
        </div>

        <div class="field form-row pt-1">
          <span class="badge text-bg-danger">必須</span>
          <%= f.text_field :price, autofocus: true, autocomplete: "price" ,placeholder: "料金"%>
        </div>

        <div class="field form-row pt-1">
          <span class="badge text-bg-danger">必須</span>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" ,placeholder: "住所"%>
        </div>

        <form>
          <div class="form-group">
            <span class="badge text-bg-danger">必須</span>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>
        </form>
      </div>
    </div>
    </div>




  </div>
<% end %>

