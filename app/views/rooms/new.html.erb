<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <div class="container-fiuld room-new">
    <div class="row">
      <nav class="active nav flex-column col-lg-2 shadow mt-0 p-5">
        <a class="nav-link active h5 mt-3 border-right border-primary" aria-current="page" href="/rooms/new">基本情報　　　</a>
      </nav>

      <div class="col-lg-10 room-view p-3">
        <div class="room-view-box m-5">
          <%= form_with model: @room, local: true do |f| %>
            <div class="update-content row mb-3">
              <h5>　　 ルーム情報登録</h5>
            </div>

            <div class="update-content">
              <div class="field form-row pt-1 d-flex mx-xl-5 border-top mt-3">
                <div class="col-md-2 required-a">
                  <%= f.label :name, "　ルーム名", {class: "required-a"}%>
                  <span class="badge text-bg-danger">必須</span>
                </div>
                <div class ="p-2 mx-xl-5 w-75">
                  <%= f.text_field :name, autofocus: true, autocomplete: "name" ,placeholder: "ルーム名", :class => 'fmb-4 col-md-5 px-2 form-control'%>
                </div>
              </div>
            </div>

            <div class="update-content">
              <div class="field form-row pt-1 d-flex mx-xl-5 border-top mt-5">
                <div class="col-md-2 required-a">
                  <%= f.label :introduction, "ルーム紹介", {class: "required-a"} %>
                  <span class="badge text-bg-danger">必須</span>
                </div>
                <div class ="p-2 mx-xl-5 w-75">
                  <%= f.text_area :introduction, size: "10x3", autofocus: true, autocomplete: "introduction" ,placeholder: "ルーム説明を入力", :class => 'fmb-4 col-md-5 px-2 form-control'%>
                </div>
              </div>
            </div>

            <div class="update-content">
              <div class="field form-row pt-1 d-flex mx-xl-5 border-top mt-5">
                <div class="col-md-2 required-a">
                  <%= f.label :price, "　　　料金", {class: "required-a"}%>
                  <span class="badge text-bg-danger">必須</span>
                </div>
                <div class ="p-2 mx-xl-5 w-75">
                  <%= f.text_field :price, autofocus: true, autocomplete: "price" ,placeholder: "1日あたりの料金を入力", :class => 'fmb-4 col-md-5 px-2 form-control'%>
                </div>
              </div>
            </div>

            <div class="update-content">
              <div class="field form-row pt-1 d-flex mx-xl-5 border-top mt-5">
                <div class="col-md-2 required-a">
                  <%= f.label :address, "　　　住所", {class: "required-a"}%>
                  <span class="badge text-bg-danger">必須</span>
                </div>
                <div class ="p-2 mx-xl-5 w-75">
                  <%= f.text_field :address, autofocus: true, autocomplete: "address" ,placeholder: "住所を入力", :class => 'fmb-4 col-md-5 px-2 form-control'%>
                </div>
              </div>
            </div>

            <div class="update-content">
              <div class="field form-row pt-1 d-flex mx-xl-5 border-top border-bottom mt-5">
                <div class="col-md-2 required-a mb-5">
                  <%= f.label :roomimages, "ルーム画像", {class: "required-a"}%>
                  <span class="badge text-bg-danger">必須</span>
                </div>
                <div class ="p-2 mx-xl-5 w-75">
                  <%= f.file_field :roomimages %>
                </div>
              </div>
            </div>

            <div class="update-content">
              <form>
                <div class="actions row">
                  <%= f.submit "登録", class:"col-md-1 btn btn-primary mx-5 mt-5"%>
                </div>
              </form>
            </div>

          <% end %>
      </div>
    </div>

  </div>


